model User {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  clerkId   String    @unique
  email     String    @unique
  firstname String
  lastname  String
  imageKey  String?
  imageUrl  String?
  messages  Message[]
  threads   Thread[]
  comments  Comment[]
}
