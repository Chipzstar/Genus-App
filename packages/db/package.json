{
  "name": "@genus/db",
  "version": "0.1.0",
  "main": "src/index.ts",
  "types": "./src/index.ts",
  "license": "MIT",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "with-env": "dotenv -e ../../.env --",
    "db:studio": "pnpm with-env drizzle-kit studio",
    "db:push": "pnpm with-env drizzle-kit push:pg",
    "db:pull": "pnpm with-env drizzle-kit introspect:pg",
    "db:generate": "pnpm with-env drizzle-kit generate:pg",
    "db:migrate": "pnpm with-env tsx ./migrate.ts",
    "db:drop": "pnpm with-env drizzle-kit drop"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.0",
    "drizzle-orm": "^0.29.4",
    "mysql2": "^3.9.2"
  },
  "devDependencies": {
    "@genus/eslint-config": "workspace:^0.2.0",
    "@genus/prettier-config": "workspace:^0.1.0",
    "@genus/tsconfig": "workspace:^0.1.0",
    "dotenv-cli": "^6.0.0",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.57.0",
    "pg": "^8.11.3",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@genus/eslint-config/base"
    ]
  },
  "prettier": "@genus/prettier-config"
}
