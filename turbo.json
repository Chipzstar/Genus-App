{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [
    "**/.env"
  ],
  "pipeline": {
    "db:migrate": {
      "inputs": [
        "drizzle/*.sql"
      ],
      "cache": true
    },
    "db:generate": {
      "inputs": [
        "drizzle/schema.ts"
      ],
      "cache": false
    },
    "db:push": {
      "inputs": [
        "drizzle/schema.ts"
      ],
      "cache": false
    },
    "db:studio": {
      "inputs": [
        "drizzle/schema.ts"
      ],
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "dependsOn": [
        "^build",
        "^db:generate",
        "^db:migrate"
      ],
      "outputs": [
        ".next/**",
        ".expo/**",
        ".sanity/**",
        "!.next/cache/**",
        "next-env.d.ts",
        ".output/**",
        ".vercel/output/**"
      ]
    },
    "format": {
      "outputs": [
        "node_modules/.cache/.prettiercache"
      ],
      "outputMode": "new-only"
    },
    "lint": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    },
    "type-check": {
      "dependsOn": [
        "^db:generate"
      ],
      "cache": false
    }
  },
  "globalEnv": [
    "DB_ADMIN_USERNAME",
    "DB_ADMIN_PASSWORD",
    "DB_USERNAME",
    "DB_PASSWORD",
    "DB_HOST",
    "DB_NAME",
    "DATABASE_URL",
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
    "CLERK_SECRET_KEY",
    "CLERK_WEBHOOK_SECRET",
    "NEXT_PUBLIC_AXIOM_DATASET",
    "NEXT_PUBLIC_AXIOM_TOKEN",
    "DIRECT_DATABASE_URL",
    "CLERK_PUBLISHABLE_KEY",
    "MAGICBELL_SECRET_KEY",
    "NEXT_PUBLIC_CLERK_SIGN_IN_URL",
    "NEXT_PUBLIC_CLERK_SIGN_UP_URL",
    "NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL",
    "NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL",
    "NEXT_PUBLIC_MAGICBELL_API_KEY",
    "NEXT_PUBLIC_SANITY_DATASET",
    "NEXT_PUBLIC_SANITY_PROJECT_ID",
    "PORT",
    "SANITY_API_READ_TOKEN",
    "UPLOADTHING_APP_ID",
    "UPLOADTHING_SECRET",
    "UPSTASH_REDIS_REST_TOKEN",
    "UPSTASH_REDIS_REST_URL",
    "VERCEL_URL"
  ]
}
