{
  "name": "@genus/db",
  "version": "0.1.0",
  "main": "./index.ts",
  "types": "./index.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "with-env": "dotenv -e ../../.env --",
    "db:studio": "pnpm with-env prisma studio --port 5556",
    "db:push": "pnpm with-env prisma db push",
    "db:generate": "pnpm with-env prisma generate",
    "db:merge": "pnpm prismerge",
    "db:sync": "pnpm prismerge && pnpm with-env prisma generate && pnpm with-env prisma db push"
  },
  "dependencies": {
    "@genus/eslint-config": "workspace:^0.2.0",
    "@genus/prettier-config": "workspace:^0.1.0",
    "@genus/tsconfig": "workspace:^0.1.0",
    "@prisma-utils/prismerge": "^1.7.0",
    "@prisma/client": "^5.6.0"
  },
  "devDependencies": {
    "dotenv-cli": "^6.0.0",
    "prisma": "^5.6.0",
    "typescript": "^5.2.2"
  }
}
